html, body {
  background: #EFEFEF url('/images/background.png') repeat right left;
  font-family: Helvetica, Georgia, sans-serif;
  font-size: 24px;
  line-height: 1.5em;
  color: #333;
}
#site {
  margin: auto;
  width: 960px;
}

#header {
  margin: 30px 0;
  text-align: center;
}
#header h1 {
  font-size: 36px;
}
#header a, #footer a {
  color: inherit;
  text-decoration: none;
}

#left {
  margin: 10px;
  width: 580px;
  float: left;
}

#right {
  margin: 50px 10px 10px;
  width: 340px;
  float: right;
}

#center {
  width: 450px;
  margin: auto;
}

#footer {
  margin: 30px 0;
  border-top: 1px solid #CCC;
  font-size: 13px;
}

.step {
  margin: 20px auto;
}
.number {
  background: #000;
  color: #FFF;
  padding: 3px;
  border-radius: 20px;
}
.description {
}

.button {
  padding: 5px;
  background: green;
  border-radius: 10px;
}
.button a {
  color: white;
  text-decoration: none;
}
.clear {
  clear: both;
}

