#email {
  clear: both;
  vertical-align: baseline;
}
#box {
  vertical-align: baseline;
  border: 2px groove #CCC;
  border-radius: 5px;
  background: #FFF;
  display: inline-block;
  height: 18px;
  margin: 0;
  padding: 5px;
  clear: both;
  width: 300px;
}
#box label {
  float: left;
  width: 50px;
  line-height: 18px;
  font-size: 15px;
  color: #666;
  padding-left: 4px;
}
#box input[type="text"] {
  width: 225px;
  font-size: 15px;
  height: 18px;
  line-height: 18px;
  float: left;
  border: none;
  padding: 0px;
  outline: none;
  border-color: white;
}
#email input[type="submit"] {
  cursor: pointer;
  background: green url('/images/shadow-bottom.png') repeat-x bottom left;
  text-shadow: 0px 1px 1px #333;
  color: #FFF;
  border-radius: 5px;
  height: 30px;
  line-height: 16px;
  font-size: 16px;
  border: none;
  outline: none;
  border-color: white;
  float: right;
}
